                font_size: '16sp'

            TextInput:
                id: password
                hint_text: 'Password'
                multiline: False
                password: True
                size_hint_y: None
                height: 55
                padding: [20, 15]
                background_color: 0.15, 0.15, 0.3, 1
                cursor_color: 1, 1, 1, 1
                foreground_color: 1, 1, 1, 1
                hint_text_color: 0.5, 0.5, 0.7, 1
