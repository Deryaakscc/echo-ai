<BuyCreditsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.2, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10

            Button:
                text: 'Geri'
                size_hint_x: None
                width: 100
                background_color: 0.15, 0.15, 0.3, 1
                on_release: root.manager.current = 'chat'

            Label:
                text: 'Kredi Satın Al'
                font_size: 24
                color: 1, 1, 1, 1

        ScrollView:
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: 20
                padding: [0, 20]

                # Credit packages
                GridLayout:
                    cols: 2
                    spacing: 20
                    size_hint_y: None
                    height: self.minimum_height

                    Button:
                        text: '100 Kredi\n10₺'
                        size_hint_y: None
                        height: 80
                        background_color: 0.15, 0.15, 0.3, 1
                        on_release: root.select_package(100, '10₺')

                    Button:
                        text: '250 Kredi\n20₺'
                        size_hint_y: None
                        height: 80
                        background_color: 0.15, 0.15, 0.3, 1
                        on_release: root.select_package(250, '20₺')

                    Button:
                        text: '500 Kredi\n35₺'
                        size_hint_y: None
                        height: 80
                        background_color: 0.15, 0.15, 0.3, 1
                        on_release: root.select_package(500, '35₺')

                    Button:
                        text: '1000 Kredi\n60₺'
                        size_hint_y: None
                        height: 80
                        background_color: 0.15, 0.15, 0.3, 1
                        on_release: root.select_package(1000, '60₺')

                # Payment form
                BoxLayout:
                    id: payment_form
                    orientation: 'vertical'
                    spacing: 15
                    size_hint_y: None
                    height: 400
                    opacity: 0
                    disabled: True

                    Label:
                        text: 'Kart Bilgileri'
                        font_size: 20
                        size_hint_y: None
                        height: 40
                        color: 1, 1, 1, 1

                    TextInput:
                        id: card_number
                        hint_text: 'Kart Numarası'
                        size_hint_y: None
                        height: 50
                        multiline: False
                        background_color: 0.15, 0.15, 0.3, 1
                        foreground_color: 1, 1, 1, 1
                        on_text: root.format_card_number(self, self.text)
                        on_text_validate: root.on_text_validate(self)

                    TextInput:
                        id: card_holder
                        hint_text: 'Kart Sahibinin Adı'
                        size_hint_y: None
                        height: 50
                        multiline: False
                        background_color: 0.15, 0.15, 0.3, 1
                        foreground_color: 1, 1, 1, 1
                        on_text_validate: root.on_text_validate(self)

                    BoxLayout:
                        size_hint_y: None
                        height: 50
                        spacing: 10

                        TextInput:
                            id: expiry_date
                            hint_text: 'Son Kullanma Tarihi (AA/YY)'
                            size_hint_x: 0.7
                            multiline: False
                            background_color: 0.15, 0.15, 0.3, 1
                            foreground_color: 1, 1, 1, 1
                            on_text: root.format_expiry_date(self, self.text)
                            on_text_validate: root.on_text_validate(self)

                        TextInput:
                            id: cvv
                            hint_text: 'CVV'
                            size_hint_x: 0.3
                            multiline: False
                            background_color: 0.15, 0.15, 0.3, 1
                            foreground_color: 1, 1, 1, 1
                            password: True
                            on_text_validate: root.on_text_validate(self)

                    Widget:
                        size_hint_y: None
                        height: 30

                    Button:
                        text: 'Ödeme Yap'
                        size_hint_y: None
                        height: 50
                        background_color: 0.3, 0.6, 1, 1
                        on_release: root.buy_credits()

                    Widget:
                        size_hint_y: None
                        height: 50

